{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1 class="jumbotron">Liste des promotions</h1>

        <table class="table table-bordered">

            <tbody>
                {% for promo in promos %}
                    <tr>
                        <td>{{ promo.fkville }} - {{ promo.numero }}</td>
                        <td>Du {% if promo.datedebut %}{{ promo.datedebut|date('Y-m-d') }}{% endif %} au {% if promo.datefin %}{{ promo.datefin|date('Y-m-d') }}{% endif %}</td>
                        <td>
                            <input type='file' id="imgInp" />
                            <img height="170" width="220" id="blah" src="#" alt="Ajoute Ton Image" />
                        </td>
                        <td>
                            <a class="btn btn-default" href="{{ path('promotion_show', { 'id': promo.id }) }}">Details</a>
                            <a class="btn btn-default" href="{{ path('promotion_edit', { 'id': promo.id }) }}">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-success" href="{{ path('promotion_new') }}">Ajouter une promotion</a>
        <a class="btn btn-primary" href="{{path("homeAdmin")}}">Retour</a>
    </div>
{% endblock %}
