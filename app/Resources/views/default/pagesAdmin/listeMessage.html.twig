{% extends 'base.html.twig' %} 
{% block body %}
    <body>
    <section class="container">
        <h1>Mes message</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>mail</th>
                    <th>objet</th>
                        {#   <th>statut</th>#}

                </tr>
            </thead>
            {% for message in messages %}
                <tr  name="{{ message.id }}">   
                    <th >{{ message.mail }}</th>
                    <th>{{ message.objet }}</th>
                        {#<th>{{ message.statut }}</th> #}                    
                    <th>
                        <button  class="btn btn-info"><a  href="{{path('detailMessage',{'id':message.id})}}">Voir +</a></button>
                        <button  name="{{ message.id }}" type="button" class="btn btn-danger btnSuprMess"><a >Supr</a></button>
                    </th>
                </tr>
            {% endfor %}
        </table>
        <a href="{{path("homeAdmin")}}" class="btn btn-primary">Retour</a>        
    </section>
    <style>
        h1{
            text-align: center;
        }
        tr > th {
            text-align: center;
        }


    </style>
</body>
{% endblock %}
