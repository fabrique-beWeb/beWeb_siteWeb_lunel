{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1 class="jumbotron">Liste des partenaires</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Logo</th>
                    <th>URL</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for partenaire in partenaires %}
                    <tr>
                        <td><a href="{{ path('partenaire_show', { 'id': partenaire.id }) }}">{{ partenaire.nom }}</a></td>
                        <td>{{ partenaire.logo }}</td>
                        <td>{{ partenaire.url }}</td>
                        <td>
                            <a class="btn btn-default" href="{{ path('partenaire_show', { 'id': partenaire.id }) }}">Details</a>
                            <a class="btn btn-default" href="{{ path('partenaire_edit', { 'id': partenaire.id }) }}">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-success" href="{{ path('partenaire_new') }}">Ajouter un partenaire</a>
        <a class="btn btn-primary" href="{{path("homeAdmin")}}">Retour</a>
    </div>
{% endblock %}
